+++ allsafe-access-1.0.0/generate.sh
@@ -0,0 +1,41 @@
+#!/bin/bash
+set -e
+
+echo "[*] Preparing Allsafe package files..."
+
+# Ensure required dirs exist
+mkdir -p debian/tmp/usr/bin
+mkdir -p debian/tmp/usr/share/allsafe-proxy/templates
+mkdir -p debian/tmp/etc/allsafe-proxy/certs
+mkdir -p debian/tmp/etc/allsafe-agent/certs
+mkdir -p debian/tmp/etc/allsafe-cli
+mkdir -p debian/tmp/etc/allsafe-access/role
+
+# Copy binaries
+install -m 0755 bin/allsafe-proxy debian/tmp/usr/bin/
+install -m 0755 bin/allsafe-cli debian/tmp/usr/bin/
+install -m 0755 bin/allsafe-agent debian/tmp/usr/bin/
+install -m 0755 bin/allsafe-admin debian/tmp/usr/bin/
+install -m 0755 bin/allsafe-auth debian/tmp/usr/bin/
+
+# Copy templates
+cp -r cmd/allsafe-proxy/templates/* debian/tmp/usr/share/allsafe-proxy/templates/
+
+# Copy configs
+cp -r configs/configs/allsafeproxy/* debian/tmp/etc/allsafe-proxy/
+cp -r configs/configs/allsafeagent/* debian/tmp/etc/allsafe-agent/
+cp -r configs/configs/allsafecli/* debian/tmp/etc/allsafe-cli/
+
+# Copy certs
+cp configs/certs/proxy.crt     debian/tmp/etc/allsafe-proxy/certs/
+cp configs/certs/proxy.key     debian/tmp/etc/allsafe-proxy/certs/
+cp configs/certs/proxy_ca.crt  debian/tmp/etc/allsafe-proxy/certs/
+
+cp configs/certs/agent.crt     debian/tmp/etc/allsafe-agent/certs/
+cp configs/certs/agent.key     debian/tmp/etc/allsafe-agent/certs/
+cp configs/certs/agent_ca.crt  debian/tmp/etc/allsafe-agent/certs/
+
+# Copy roles
+cp -r configs/roles/* debian/tmp/etc/allsafe-access/role/
+
+echo "[*] All files staged under debian/tmp/"
